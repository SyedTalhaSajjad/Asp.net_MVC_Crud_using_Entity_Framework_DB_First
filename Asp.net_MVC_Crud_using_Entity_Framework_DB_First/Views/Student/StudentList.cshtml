@model List<Asp.net_MVC_Crud_using_Entity_Framework_DB_First.Context.tbl_Student>
@{
    ViewBag.Title = "StudentList";
}


<h1 class="text-primary text-capitalize text-center">Your Student List</h1>
<table class="table table-hover">
    <tr>
        <td>Name</td>
        <td>Fname</td>
        <td>Email</td>
        <td>Mobile</td>
        <td>Description</td>
        <td>Action</td>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>@item.Name</td>
            <td>@item.Fname</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.Description</td>
            <td>
                <a href="@Url.Action("Student",new { item.Id, item.Name, item.Fname, item.Email, item.Mobile, item.Description})" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("Delete", new { item.Id})"  class="btn btn-danger">Delete</a>
            </td>
        </tr>
            }
</table>

